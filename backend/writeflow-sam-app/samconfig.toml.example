# AWS SAM Configuration File
# Copy this file to samconfig.toml and update values as needed
# More info: https://docs.aws.amazon.com/serverless-application-model/latest/developerguide/serverless-sam-cli-config.html

version = 0.1

[default.global.parameters]
stack_name = "writeflow-sam-app"

[default.build.parameters]
cached = true
parallel = true

[default.validate.parameters]
lint = true

[default.deploy.parameters]
capabilities = "CAPABILITY_IAM"
confirm_changeset = true
resolve_s3 = true
s3_prefix = "writeflow-sam-app"
region = "us-east-1"
parameter_overrides = "Environment=\"dev\""
image_repositories = []

# Uncomment and modify for different environments:
# [staging.deploy.parameters]
# capabilities = "CAPABILITY_IAM"
# confirm_changeset = true
# resolve_s3 = true
# s3_prefix = "writeflow-sam-app-staging"
# region = "us-east-1"
# parameter_overrides = "Environment=\"staging\""

# [prod.deploy.parameters]
# capabilities = "CAPABILITY_IAM"
# confirm_changeset = true
# resolve_s3 = true
# s3_prefix = "writeflow-sam-app-prod"
# region = "us-east-1"
# parameter_overrides = "Environment=\"prod\""

[default.package.parameters]
resolve_s3 = true

[default.sync.parameters]
watch = true

[default.local_start_api.parameters]
warm_containers = "EAGER"

[default.local_start_lambda.parameters]
warm_containers = "EAGER"
