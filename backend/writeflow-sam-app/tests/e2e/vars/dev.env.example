# Writeflow E2E Tests - Development Environment Template
# Copy this file to dev.env and fill in your values
# Usage: hurl --variables-file vars/dev.env --test tests/e2e/**/*.hurl

# API Configuration
base_url=https://YOUR_API_ID.execute-api.us-east-1.amazonaws.com/dev

# Cognito Configuration
user_pool_id=us-east-1_XXXXXXX
client_id=XXXXXXXXXXXXXXXXXXXXXXXX
cognito_domain=https://YOUR_DOMAIN.auth.us-east-1.amazoncognito.com

# AWS Resources
posts_table=writeflow-posts-dev
content_bucket=writeflow-content-dev-XXXXXXXXXXXX

# Test User Credentials (create this user in Cognito first)
test_email=test@example.com
test_password=YourTestPassword123!

# Second Test User (for cross-user security tests)
test_email_2=test2@example.com
test_password_2=YourTestPassword123!
